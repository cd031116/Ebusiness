<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.eb.sc.activity.SettingActivity">

    <include layout="@layout/view_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EAEAEA"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="100px"
            android:background="@drawable/sale_bg_ac"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sale_px_bg"
                    android:padding="40px"
                    android:text="票型"
                    android:textColor="#cacaca"
                    android:textSize="60px" />


                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sale_cy_bg"
                    android:layout_gravity="center_vertical"
                    android:padding="40px"/>
                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sale_cy_bg"
                    android:gravity="right"
                    android:padding="40px"
                    android:visibility="gone"
                    android:text="丛林穿越"
                    android:textColor="#5E84AA"
                    android:textSize="60px" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="40px"
                    android:text="价格"
                    android:textColor="#cacaca"
                    android:textSize="60px" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sale_jg_bg"
                    android:gravity="right"
                    android:padding="40px"
                    android:text=""
                    android:textColor="#EB5D5D"
                    android:textSize="60px" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sale_sl_bg"
                    android:padding="40px"
                    android:text="数量"
                    android:textColor="#cacaca"
                    android:textSize="60px" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:paddingRight="30px"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/cut_t"
                        android:layout_width="80px"
                        android:layout_height="80px"
                        android:background="@drawable/cut_bg" />

                    <TextView
                        android:id="@+id/p_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="70px"
                        android:padding="30px"
                        android:gravity="center"
                        android:textSize="60px"
                        android:text="1" />

                    <TextView
                        android:id="@+id/add_t"
                        android:layout_width="80px"
                        android:layout_height="80px"
                        android:background="@drawable/cut_press" />
                </LinearLayout>
            </RelativeLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90px"
            android:layout_marginRight="90px"
            android:layout_marginTop="60px"
            android:background="@drawable/pay_text_bg"
            android:gravity="center_horizontal"
            android:padding="30px"
            android:text="售票"
            android:textColor="#ffffff"
            android:textSize="60px" />


        <TextView
            android:id="@+id/total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90px"
            android:layout_marginRight="90px"
            android:layout_marginTop="60px"
            android:background="@drawable/pay_text_bg"
            android:gravity="center_horizontal"
            android:padding="30px"
            android:text="统计"
            android:textColor="#ffffff"
            android:textSize="60px" />
    </LinearLayout>


</LinearLayout>
