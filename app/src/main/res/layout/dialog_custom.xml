<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical" android:background="@drawable/shape_progress"
              android:alpha="0.6" android:gravity="center"
              android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:padding="8dp" android:paddingBottom="10dp">
    <ProgressBar android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:indeterminateDrawable="@drawable/progress_anim"
                 android:layout_marginTop="2dp" android:layout_marginLeft="2dp"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/info" android:textColor="@android:color/white"/>
</LinearLayout>