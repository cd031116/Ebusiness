<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/view_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EAEAEA"
        android:gravity="center"
        android:paddingBottom="100px"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/error"
            android:layout_width="270px"
            android:layout_height="270px"
            android:src="@drawable/chenggong"/>
            <TextView
                android:id="@+id/state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#51AD5F"
                android:textSize="60px"
                android:padding="20px"
                android:text=""/>


        <TextView
            android:id="@+id/check_buy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50px"
            android:text="查看支付结果"
            android:textColor="#ffffff"
            android:layout_marginLeft="60px"
            android:layout_marginRight="60px"
            android:layout_marginTop="60px"
            android:visibility="gone"
            android:gravity="center_horizontal"
            android:background="@drawable/pay_text_bg"
            android:padding="30px"/>

        <TextView
            android:id="@+id/printer_tick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50px"
            android:text="打印门票"
            android:textColor="#ffffff"
            android:layout_marginLeft="60px"
            android:layout_marginRight="60px"
            android:layout_marginTop="60px"
            android:gravity="center_horizontal"
            android:background="@drawable/pay_text_bg"
            android:padding="30px"/>

        <TextView
            android:id="@+id/check_tick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50px"
            android:text="检票"
            android:textColor="#ffffff"
            android:layout_marginLeft="60px"
            android:layout_marginRight="60px"
            android:layout_marginTop="60px"
            android:gravity="center_horizontal"
            android:background="@drawable/pay_text_bg"
            android:padding="30px"/>


    </LinearLayout>
</LinearLayout>