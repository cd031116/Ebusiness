<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:padding="20px"
    tools:context="com.eb.sc.activity.CheckActivity">

    <include layout="@layout/view_top" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20px"
            android:orientation="vertical">


        <!--1-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/scan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/check_p"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_margin="30px"
                android:padding="20px">

                <ImageView
                    android:layout_width="180px"
                    android:layout_height="180px"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:padding="30px"
                    android:src="@drawable/jianpiao" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="检票"
                    android:textColor="#ffffff"
                    android:padding="30px"
                    android:textSize="90px" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/sale"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/sale_bg"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_margin="30px"
                android:padding="20px">

                <ImageView
                    android:layout_width="180px"
                    android:layout_height="180px"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:padding="30px"
                    android:src="@drawable/shoupiao" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="售票"
                    android:textColor="#ffffff"
                    android:padding="30px"
                    android:textSize="90px" />

            </LinearLayout>

        </LinearLayout>


            <!--2-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/detail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/detail_bg"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_margin="30px"
                    android:padding="20px">

                    <ImageView
                        android:layout_width="180px"
                        android:layout_height="180px"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:padding="30px"
                        android:src="@drawable/mingxi" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="明细"
                        android:textColor="#ffffff"
                        android:padding="30px"
                        android:textSize="90px" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/select"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/query_bg"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_margin="30px"
                    android:padding="20px">

                    <ImageView
                        android:layout_width="180px"
                        android:layout_height="180px"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:padding="30px"
                        android:src="@drawable/chaxun" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查询"
                        android:textColor="#ffffff"
                        android:padding="30px"
                        android:textSize="90px" />

                </LinearLayout>



            </LinearLayout>

            <!--3-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/sync"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/sync_bg"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_margin="30px"
                    android:padding="20px">

                    <ImageView
                        android:layout_width="180px"
                        android:layout_height="180px"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:padding="30px"
                        android:src="@drawable/tongbu" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="同步"
                        android:textColor="#ffffff"
                        android:padding="30px"
                        android:textSize="90px" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/setting"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/setting_bg"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_margin="30px"
                    android:padding="20px">

                    <ImageView
                        android:layout_width="180px"
                        android:layout_height="180px"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:padding="30px"
                        android:src="@drawable/setting" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设置"
                        android:textColor="#ffffff"
                        android:padding="30px"
                        android:textSize="90px" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
